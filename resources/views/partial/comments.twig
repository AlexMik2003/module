{% if auth %}
    <form class="form-horizontal" action="{{ path_for('news',  { 'id': news.id }) }}" method="post">
        <div class="form-group">
            <label for="comment" class="col-md-3 control-label">Comments: </label>
            <div class="col-md-7">
                <textarea class="form-control" id="comment" name="comment" value=""></textarea>
            </div>
        </div>
        <div class="col-md-offset-5 col-md-10">
            <button type="submit" class="btn btn-primary"><strong>Add</strong></button>
        </div>
        {{ csrf.field | raw }}
    </form>
{% endif %}